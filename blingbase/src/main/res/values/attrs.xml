<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawable" format="reference|color" />
        <attr name="rightDrawable" format="reference|color" />
        <attr name="topDrawable" format="reference|color" />
        <attr name="bottomDrawable" format="reference|color" />

        <attr name="leftDrawableWidth" format="reference|dimension" />
        <attr name="rightDrawableWidth" format="reference|dimension" />
        <attr name="topDrawableWidth" format="reference|dimension" />
        <attr name="bottomDrawableWidth" format="reference|dimension" />

        <attr name="leftDrawableHeight" format="reference|dimension" />
        <attr name="rightDrawableHeight" format="reference|dimension" />
        <attr name="topDrawableHeight" format="reference|dimension" />
        <attr name="bottomDrawableHeight" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="rivImgRatio" format="float" />
    </declare-styleable>


    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <!-- 末行对齐方式 -->
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!--圆角或者圆形图片组件-->
    <declare-styleable name="CircleImageView">
        <attr name="civBorderColor" format="color" />
        <attr name="civBorderWidth" format="dimension" />
        <attr name="civPressAlpha" format="integer" />
        <attr name="civPressColor" format="color" />
        <attr name="civRadius" format="dimension" />
        <attr name="civShapeType" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>


    <!--圆角或者圆形图片组件-->
    <declare-styleable name="BannerView">
        <attr name="bvIndicatorNormal" format="reference" />
        <attr name="bvIndicatorSelect" format="reference" />
        <attr name="bvIndicatorMargin" format="reference|dimension" />
        <attr name="bvIndicatorMarginBottom" format="reference|dimension" />
        <attr name="bvIsOpenMZEffect" format="boolean" />
        <attr name="bvIsMiddlePageCover" format="boolean" />
        <attr name="bvIsCanLoop" format="boolean" />
        <attr name="bvIsAutoLoop" format="boolean" />
        <attr name="bvHiddenIndicator" format="boolean" />
        <attr name="bvAspectRatio" format="float" />
        <attr name="bvIndicatorAlign" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!--上下滚动走马灯-->
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference" />
        <attr name="mvAnimDuration" format="integer|reference" />
        <attr name="mvTextSize" format="dimension|reference" />
        <attr name="mvTextColor" format="color|reference" />
        <attr name="mvSingleLine" format="boolean" />
        <attr name="mvFont" format="reference" />
        <attr name="mvGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0" />
            <enum name="top_to_bottom" value="1" />
            <enum name="right_to_left" value="2" />
            <enum name="left_to_right" value="3" />
        </attr>
    </declare-styleable>
</resources>