<?xml version="1.0" encoding="utf-8"?>
<dinson.customview.weight.swipelayout.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deleteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="start"
        android:background="@drawable/_003_list_undercover"
        android:scaleType="center"
        android:contentDescription="@string/des_pic"
        android:src="@drawable/_003_delete_ic" />

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/selector_003_window_bg"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@id/ivImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvCurrencyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/ivImg"
            android:fontFamily="sans-serif-thin"
            android:minWidth="50dp"
            android:textColor="@color/_003_text_color_hint"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/tvCurrencyCode"
            android:ellipsize="none"
            android:fontFamily="sans-serif-thin"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/_003_text_color_hint"
            android:textSize="20sp" />

        <dinson.customview.weight.LanTingFontTextView
            android:id="@+id/tvEquation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvResult"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/tvCurrencyCode"
            android:alpha="0.34"
            android:ellipsize="none"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvCurrencyCn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvResult"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/_003_text_color_hint"
            android:textSize="12sp" />

        <View
            android:id="@+id/lFocusView"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:visibility="invisible" />

        <View
            android:id="@+id/sFocusView"
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_above="@id/tvResult"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvEquation"
            android:background="@color/_003_text_color_hint"
            android:visibility="invisible" />
    </RelativeLayout>
</dinson.customview.weight.swipelayout.SwipeItemLayout>