<?xml version="1.0" encoding="utf-8"?>
<dinson.customview.weight.pullzoomview.PullZoomView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/mPullZoomView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".activity._003GankIOActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:tag="header">

            <ImageView
                android:id="@+id/ivPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/def_img"
                android:tag="zoom"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="-28dp"
            android:clickable="true"
            android:elevation="20dp"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/_003_tab_lady"
            app:backgroundTint="@color/red"
            app:fabCustomSize="56dp"
            app:pressedTranslationZ="5dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@id/rvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-28dp"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/spacing_medium"
            android:tag="content" />
    </LinearLayout>
</dinson.customview.weight.pullzoomview.PullZoomView>