<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    tools:ignore="HardcodedText,ContentDescription">


    <com.dinson.blingbase.widget.DrawableTextView
        android:id="@id/tvTitle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:textColor="@color/textSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:topDrawableHeight="50dp"
        app:topDrawableWidth="50dp"
        tools:text="文档识别"
        tools:topDrawable="@drawable/_006_ic_document" />

    <ImageView
        android:id="@+id/isByLocal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="35dp"
        android:scaleType="centerInside"
        android:src="@drawable/selector_006_item_is_by_local"
        app:layout_constraintRight_toRightOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="@id/tvTitle" />

</FrameLayout>