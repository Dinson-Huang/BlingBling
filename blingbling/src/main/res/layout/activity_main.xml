<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dinson.customview.activity.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/crlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="9dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <dinson.customview.weight.banner.BannerView
                android:id="@+id/mainBanner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:bannerAspectRatio="1.5"
                app:canLoop="false"
                app:hiddenIndicator="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:open_mz_mode="false"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/main.toolbar"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <ViewStub
                android:id="@id/vsContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout="@layout/aspect_ratio_iv_layout"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/main_top_wave"
                tools:ignore="ContentDescription"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@id/rvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <LinearLayout
        android:id="@+id/llDaily"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvDailyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:textSize="24sp"
            tools:text="标题"/>

        <TextView
            android:id="@+id/tvDailyContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            tools:text="内容"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/weatherLayout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@drawable/shape_rec_r999"
        android:elevation="15dp"
        android:gravity="center_vertical">

        <dinson.customview.weight.IconFontTextView
            android:id="@+id/iconFontWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/if_unknown_99"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconFontWeather"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/unknown"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <ViewStub
        android:id="@+id/vsAndroidInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_main_android_info"/>
</android.support.design.widget.CoordinatorLayout>
