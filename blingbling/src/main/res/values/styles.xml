<resources>
    <!--————————————————————————————————————————主题——————————————————————————————————————————————-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/common_divider</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/textPrimary</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleBackgroundStyle">@null</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!--————————————————————————————————————————字体——————————————————————————————————————————————-->
    <style name="font">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="font.small" parent="font">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="font.normal" parent="font">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font.appTitle" parent="font">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font.bigTitle" parent="font">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="font.large" parent="font">
        <item name="android:textSize">34sp</item>
    </style>
    <!--————————————————————————————————————————其他——————————————————————————————————————————————-->
    <!--测试按钮-->
    <style name="TestBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_rec_r5</item>
    </style>
    <!--003-->
    <style name="_003IvKeyboard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">false</item>
        <item name="android:background">@drawable/ripple_main_white</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <!--005-->
    <style name="_005TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_medium</item>
    </style>

    <style name="_005EditView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/selector_005_bg_edit</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textCursorDrawable">@drawable/_005_bg_input_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:digits">
            0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-_.
        </item>
    </style>
    <!--021-->
    <style name="_021TopIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/circle_white</item>
        <item name="android:backgroundTint">#1a1a1a</item>
        <item name="android:gravity">center</item>
    </style>
    <!--007-->
    <style name="_007Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">16sp</item>
    </style>
    <!--008-->
    <style name="_008Tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">center</item>
    </style>
    <!--010-->
    <style name="_010_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">5</item>
        <item name="android:divider">@drawable/_010_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="_010_Item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="_010_Item.XA" />

    <style name="_010_Item.XA.Lv5">
