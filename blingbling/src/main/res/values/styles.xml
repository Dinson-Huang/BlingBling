    <style name="_010_Item.YA" />

    <style name="_010_Item.YA.Lv5">
        <item name="y_in">-2.2</item>
        <item name="y_out">2.2</item>
        <item name="a_in">2.2</item>
        <item name="a_out">2.2</item>
    </style>

    <style name="_010_Item.YA.Lv4">
        <item name="y_in">-1.9</item>
        <item name="y_out">1.9</item>
        <item name="a_in">1.9</item>
        <item name="a_out">1.9</item>
    </style>

    <style name="_010_Item.YA.Lv3">
        <item name="y_in">-1.6</item>
        <item name="y_out">1.6</item>
        <item name="a_in">1.6</item>
        <item name="a_out">1.6</item>
    </style>

    <style name="_010_Item.YA.Lv2">
        <item name="y_in">-1.3</item>
        <item name="y_out">1.3</item>
        <item name="a_in">1.3</item>
        <item name="a_out">1.3</item>
    </style>

    <style name="_010_Item.YA.Lv1">
        <item name="y_in">-1</item>
        <item name="y_out">1</item>
        <item name="a_in">1</item>
        <item name="a_out">1</item>
    </style>

    <style name="_010_Item_ThirdLogin">
        <item name="y_in">-1</item>
        <item name="y_out">1</item>
    </style>

    <style name="_010_Item_Login">
        <item name="x_in">-2</item>
        <item name="x_out">2</item>
    </style>

    <!--026-->
    <style name="_026_Action_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textSecond</item>
        <item name="android:background">@drawable/ripple_main_white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>

    <style name="BaseToolBarTheme" parent="AppTheme">
        <!--  <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <!--设置toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置为false即可使menu位置位于toolbar之下-->
    </style>
    <!--修改toolbar弹出剩余隐藏菜单条目按钮的样式-->
    <!--<style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_setting</item>
    </style>-->
    <!--Toolbar白色主题-->
    <style name="BaseToolBarTheme.White">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:actionMenuTextColor">@color/textPrimary</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="colorControlNormal">@color/textPrimary</item><!-- 溢出菜单图标颜色-->
    </style>
    <!--Toolbar黑色主题-->
    <style name="BaseToolBarTheme.Black">
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:colorBackground">#2f2f2f</item>
        <item name="colorControlNormal">@color/white</item><!-- 溢出菜单图标颜色-->
    </style>
    <!--027Toolbar主题-->
    <style name="BaseToolBarTheme.Black.027">
        <item name="colorAccent">#aaaaaa</item>
        <!--修改搜索框提示文字-->
        <item name="defaultQueryHint">搜索番号或者名字</item>
        <!--修改搜索框左边的搜索按钮图标-->
        <item name="searchIcon">@drawable/action_icon_add</item>
        <item name="searchHintIcon">@drawable/action_icon_add</item>
    </style>
    <!--水平线-->
    <style name="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_divider</item>
    </style>
    <!--水平细线-->
    <style name="HorizontalLine.thin">
        <item name="android:layout_height">0.5dp</item>
    </style>
    <!--垂直线-->
    <style name="VerticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/common_divider</item>
    </style>
    <!-- 自定义对话框样式 -->
    <style name="BaseDialogTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--001登陆界面替换主题色-->
    <style name="AppTheme.AccentGreen">
        <item name="colorAccent">@color/_001_accent_green</item>
    </style>

    <style name="AppTheme.AccentGold">
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="AppTheme.Accent005">
        <item name="colorControlActivated">@color/_005_config_bg</item>
    </style>
    <!--027界面的主题颜色-->
    <style name="AppTheme.Activity025">
        <item name="colorPrimary">@color/_025_colorPrimary</item>
        <item name="colorAccent">@color/_025_colorAccent</item>
        <item name="colorControlNormal">@color/textHint</item>
        <item name="colorControlActivated">@color/_025_colorPrimary</item>
    </style>

    <!--027界面的主题颜色-->
    <style name="AppTheme.Activity025AddSchedule">
        <item name="colorPrimary">@color/_025_colorPrimary</item>
        <item name="colorAccent">@color/_025_colorAccent</item>
        <item name="colorControlActivated">@color/_025_colorPrimary</item>
    </style>


    <!--标题与NavigationIcon的距离-->
    <style name="Toolbar._027ToolsBar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!--Toolbar标题文字大小-->
    <style name="Toolbar._027ToolsBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>