<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_014_activity_bg"
    tools:context="dinson.customview.activity._017TetrisActivity">

    <android.support.constraint.Guideline
        android:id="@id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <android.support.constraint.Guideline
        android:id="@+id/glCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <dinson.customview.weight._017tetris.TetrisGameView
        android:id="@+id/game"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnDownFast"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="快下"
        app:layout_constraintLeft_toLeftOf="@+id/btnLeft"
        app:layout_constraintRight_toRightOf="@+id/btnRight"
        app:layout_constraintTop_toBottomOf="@+id/btnLeft"/>
    <Button
        android:id="@+id/btnReset"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="重置"
        app:layout_constraintLeft_toLeftOf="@+id/btnLeft"
        app:layout_constraintRight_toRightOf="@+id/btnRight"
        app:layout_constraintBottom_toTopOf="@+id/btnLeft"/>
    <Button
        android:id="@+id/btnLeft"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="左"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnRotate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnRight"/>

    <Button
        android:id="@+id/btnRight"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="右"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnRotate"
        app:layout_constraintLeft_toRightOf="@+id/btnLeft"
        app:layout_constraintRight_toRightOf="@+id/glCenter"/>

    <Button
        android:id="@+id/btnRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/glCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline"/>
</android.support.constraint.ConstraintLayout>
