    <!--12sp 小字提示
    14sp（桌面端13sp） 正文/按钮文字
    16sp（桌面端15sp） 小标题
    20sp Appbar文字
    24sp 大标题
    34sp/45sp/56sp/112sp 超大号文字-->
    <!--————————————————————————————————————————字体——————————————————————————————————————————————-->
    <style name="font">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="font.small" parent="font">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="font.normal" parent="font">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font.appTitle" parent="font">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font.bigTitle" parent="font">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="font.large" parent="font">
        <item name="android:textSize">34sp</item>
    </style>
    <!--————————————————————————————————————————其他——————————————————————————————————————————————-->
    <!--_005-->
    <style name="_005TopIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/circle_white</item>
        <item name="android:backgroundTint">#1a1a1a</item>
        <item name="android:gravity">center</item>
    </style>
    <!--007-->
    <style name="_007Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">16sp</item>
    </style>
    <!--008-->
    <style name="_008Tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">center</item>
    </style>
    <!--010-->
    <style name="_010_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">5</item>
        <item name="android:divider">@drawable/_010_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="_010_Item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

